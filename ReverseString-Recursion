#include <iostream>
#include <string.h>
using namespace std;
void Reverse(char str[],int l)
{
    if(l==0)
    {
        cout<<str[l];
        return ;
    }
    
    cout<<str[l];
    l--;
    Reverse(str,l);
}


int main() {
    char str[200];
    cin>>str;
    int l=0;
    for(int i=0;str[i]!='\0';i++)
        l++;
    l=l-1;
    Reverse(str,l);
    
    
    
    
}
